---
interface Props {
	name: string;
	tagline: string;
	logo: string;
	category: string;
	pricing: string;
	priceRange?: string;
	startingPrice?: string;
	rating: number;
	href: string;
	featured?: boolean;
}

const { name, tagline, logo, category, rating, href, featured = false } = Astro.props;

const fullStars = Math.floor(rating);
const hasHalfStar = rating % 1 >= 0.5;
const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
---

<article class={`tool-card ${featured ? 'featured' : ''}`}>
	<a href={href} class="card-link">
		<div class="card-header">
			<div class="logo-wrapper">
				<img
					src={logo}
					alt={`${name} logo`}
					width="80"
					height="80"
					loading="lazy"
				/>
			</div>
			<div class="header-info">
				<h3 class="tool-name">{name}</h3>
				<p class="tool-tagline">{tagline}</p>
			</div>
		</div>

		<div class="card-meta">
			<div class="meta-row">
				<span class="category-badge">{category}</span>
				<div class="rating">
					{[...Array(fullStars)].map(() => (
						<svg class="star filled" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
						</svg>
					))}
					{hasHalfStar && (
						<svg class="star half" width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77V2z"/>
						</svg>
					)}
					{[...Array(emptyStars)].map(() => (
						<svg class="star empty" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
						</svg>
					))}
					<span class="rating-value">{rating.toFixed(1)}</span>
				</div>
			</div>
		</div>

		<div class="card-footer">
			<div class="cta-btn">
				<span class="cta-label">Voir l'outil</span>
				<span class="cta-arrow-wrap">
					<svg class="cta-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
						<path d="M5 12h14M12 5l7 7-7 7"/>
					</svg>
				</span>
				<span class="cta-shimmer"></span>
			</div>
		</div>
	</a>
</article>

<style>
	.tool-card {
		background: var(--bg-primary);
		border: 1px solid var(--border-color);
		border-radius: 16px;
		overflow: hidden;
		transition: border-color 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.tool-card:hover {
		border-color: var(--accent);
		box-shadow: var(--shadow-lg);
		transform: translateY(-4px);
	}

	.card-link {
		display: flex;
		flex-direction: column;
		height: 100%;
		text-decoration: none;
		color: inherit;
		padding: 1.5rem;
	}

	/* Header */
	.card-header {
		display: flex;
		align-items: flex-start;
		gap: 1rem;
		margin-bottom: 1.25rem;
	}

	.logo-wrapper {
		flex-shrink: 0;
		width: 56px;
		height: 56px;
		background: var(--bg-secondary);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		padding: 0.5rem;
		border: 1px solid var(--border-color);
	}

	.logo-wrapper img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		border-radius: 0;
	}

	.header-info {
		flex: 1;
		min-width: 0;
	}

	.tool-name {
		font-size: 1.125rem;
		font-weight: 700;
		margin: 0 0 0.3rem 0;
		color: var(--text-primary);
		transition: color 0.2s ease;
		letter-spacing: -0.02em;
	}

	.tool-card:hover .tool-name {
		color: var(--accent);
	}

	.tool-tagline {
		font-size: 0.8125rem;
		color: var(--text-secondary);
		margin: 0;
		line-height: 1.45;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	/* Meta row */
	.card-meta {
		flex: 1;
	}

	.meta-row {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 0.5rem;
	}

	.category-badge {
		display: inline-block;
		padding: 0.3rem 0.65rem;
		border-radius: 6px;
		font-size: 0.7rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.06em;
		background: var(--bg-tertiary);
		color: var(--text-secondary);
	}

	.rating {
		display: flex;
		align-items: center;
		gap: 0.2rem;
	}

	.star { color: #F59E0B; }
	.star.empty { color: var(--border-color); }
	.star.half { color: #F59E0B; }

	.rating-value {
		margin-left: 0.35rem;
		font-size: 0.8125rem;
		font-weight: 600;
		color: var(--text-secondary);
	}

	/* CTA Button */
	.card-footer {
		margin-top: 1.25rem;
		padding-top: 1.25rem;
		border-top: 1px solid var(--border-light);
	}

	.cta-btn {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		padding: 0.7rem 1rem 0.7rem 1.125rem;
		background: var(--accent);
		color: white;
		border-radius: 10px;
		font-weight: 600;
		font-size: 0.875rem;
		letter-spacing: -0.01em;
		overflow: hidden;
		transition: background 0.25s ease, transform 0.2s ease, box-shadow 0.25s ease;
	}

	.tool-card:hover .cta-btn {
		background: var(--accent-hover);
		transform: translateY(-1px);
		box-shadow: 0 6px 20px rgba(249, 115, 22, 0.35);
	}

	/* Arrow container */
	.cta-arrow-wrap {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 28px;
		height: 28px;
		background: rgba(255, 255, 255, 0.2);
		border-radius: 6px;
		flex-shrink: 0;
		transition: background 0.2s ease;
	}

	.tool-card:hover .cta-arrow-wrap {
		background: rgba(255, 255, 255, 0.3);
	}

	.cta-arrow {
		transition: transform 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
	}

	.tool-card:hover .cta-arrow {
		transform: translateX(3px);
	}

	/* Shimmer sweep on hover */
	.cta-shimmer {
		position: absolute;
		top: 0;
		left: -100%;
		width: 60%;
		height: 100%;
		background: linear-gradient(
			90deg,
			transparent 0%,
			rgba(255, 255, 255, 0.18) 50%,
			transparent 100%
		);
		transition: left 0.5s ease;
		pointer-events: none;
	}

	.tool-card:hover .cta-shimmer {
		left: 160%;
	}

	/* Featured */
	.featured {
		background: linear-gradient(135deg, var(--bg-primary) 0%, var(--accent-light) 100%);
	}

	@media (max-width: 768px) {
		.card-link {
			padding: 1.25rem;
		}

		.logo-wrapper {
			width: 48px;
			height: 48px;
		}

		.tool-name {
			font-size: 1rem;
		}
	}
</style>
