---
interface Props {
	name: string;
	tagline: string;
	logo: string; // URL string maintenant
	category: string;
	pricing: string;
	priceRange?: string;
	startingPrice?: string;
	rating: number;
	href: string;
	featured?: boolean;
}

const { name, tagline, logo, category, pricing, priceRange, startingPrice, rating, href, featured = false } = Astro.props;

// Générer les étoiles pour le rating
const fullStars = Math.floor(rating);
const hasHalfStar = rating % 1 >= 0.5;
const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
---

<article class={`tool-card ${featured ? 'featured' : ''}`}>
	<a href={href} class="card-link">
		<div class="card-header">
			<div class="logo-wrapper">
				<img 
					src={logo} 
					alt={`${name} logo`}
					width="80"
					height="80"
					loading="lazy"
				/>
			</div>
			<div class="header-info">
				<h3 class="tool-name">{name}</h3>
				<p class="tool-tagline">{tagline}</p>
			</div>
		</div>

		<div class="card-meta">
			<div class="meta-row">
				<span class="category-badge">{category}</span>
				<span class="pricing-badge">{pricing}</span>
			</div>
			
			{startingPrice && (
				<div class="price-info">
					<span class="price-label">À partir de</span>
					<span class="price-value">{startingPrice}</span>
				</div>
			)}

			<div class="rating">
				{[...Array(fullStars)].map(() => (
					<svg class="star filled" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
					</svg>
				))}
				{hasHalfStar && (
					<svg class="star half" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77V2z"/>
					</svg>
				)}
				{[...Array(emptyStars)].map(() => (
					<svg class="star empty" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
					</svg>
				))}
				<span class="rating-value">{rating.toFixed(1)}</span>
			</div>
		</div>

		<div class="card-footer">
			<span class="cta-text">Voir l'outil</span>
			<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<path d="M5 12h14M12 5l7 7-7 7"/>
			</svg>
		</div>
	</a>
</article>

<style>
	.tool-card {
		background: var(--bg-primary);
		border: 1px solid var(--border-color);
		border-radius: 16px;
		overflow: hidden;
		transition: all 0.3s ease;
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.tool-card:hover {
		border-color: var(--accent);
		box-shadow: var(--shadow-lg);
		transform: translateY(-4px);
	}

	.card-link {
		display: flex;
		flex-direction: column;
		height: 100%;
		text-decoration: none;
		color: inherit;
		padding: 1.5rem;
	}

	.card-header {
		display: flex;
		align-items: flex-start;
		gap: 1rem;
		margin-bottom: 1.25rem;
	}

	.logo-wrapper {
		flex-shrink: 0;
		width: 64px;
		height: 64px;
		background: var(--bg-secondary);
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		padding: 0.5rem;
	}

	.logo-wrapper img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		border-radius: 0;
	}

	.header-info {
		flex: 1;
		min-width: 0;
	}

	.tool-name {
		font-size: 1.25rem;
		font-weight: 700;
		margin: 0 0 0.25rem 0;
		color: var(--text-primary);
		transition: color 0.2s ease;
	}

	.tool-card:hover .tool-name {
		color: var(--accent);
	}

	.tool-tagline {
		font-size: 0.875rem;
		color: var(--text-secondary);
		margin: 0;
		line-height: 1.4;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.card-meta {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.meta-row {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.category-badge,
	.pricing-badge {
		display: inline-block;
		padding: 0.375rem 0.75rem;
		border-radius: 6px;
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.category-badge {
		background: var(--bg-tertiary);
		color: var(--text-primary);
	}

	.pricing-badge {
		background: var(--accent-light);
		color: var(--accent);
	}

	.price-info {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.price-label {
		font-size: 0.75rem;
		color: var(--text-muted);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.price-value {
		font-size: 0.9375rem;
		font-weight: 600;
		color: var(--text-primary);
	}

	.rating {
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.star {
		color: #FFA500;
	}

	.star.empty {
		color: var(--border-color);
	}

	.star.half {
		color: #FFA500;
	}

	.rating-value {
		margin-left: 0.5rem;
		font-size: 0.875rem;
		font-weight: 600;
		color: var(--text-secondary);
	}

	.card-footer {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding-top: 1rem;
		margin-top: 1rem;
		border-top: 1px solid var(--border-light);
	}

	.cta-text {
		font-weight: 600;
		color: var(--accent);
		font-size: 0.9375rem;
	}

	.card-footer svg {
		color: var(--accent);
		transition: transform 0.2s ease;
	}

	.tool-card:hover .card-footer svg {
		transform: translateX(4px);
	}

	/* Featured card */
	.featured {
		border-color: var(--accent);
		background: linear-gradient(135deg, var(--bg-primary) 0%, var(--accent-light) 100%);
	}

	.featured::before {
		content: "Featured";
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: var(--accent);
		color: white;
		padding: 0.25rem 0.75rem;
		border-radius: 6px;
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	@media (max-width: 768px) {
		.card-link {
			padding: 1.25rem;
		}

		.logo-wrapper {
			width: 56px;
			height: 56px;
		}

		.tool-name {
			font-size: 1.125rem;
		}
	}
</style>
