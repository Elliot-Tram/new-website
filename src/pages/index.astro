---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ToolCard from '../components/ToolCard.astro';
import { SITE_TITLE } from '../consts';

const allTools = await getCollection('tools');
const sortedTools = allTools.sort((a, b) => b.data.rating - a.data.rating);
const featuredTools = sortedTools.slice(0, 6);

const categories = [
	{ slug: 'CRM', label: 'CRM', icon: '◈' },
	{ slug: 'Email Marketing', label: 'Email Marketing', icon: '◉' },
	{ slug: 'Analytics', label: 'Analytics', icon: '◇' },
	{ slug: 'Project Management', label: 'Gestion de projet', icon: '▣' },
	{ slug: 'SEO', label: 'SEO', icon: '◎' },
	{ slug: 'Automation', label: 'Automation', icon: '◈' },
	{ slug: 'Social Media', label: 'Réseaux sociaux', icon: '◉' },
	{ slug: 'Prospecting', label: 'Prospection', icon: '◇' },
];
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead
			title={`${SITE_TITLE} — Les meilleurs outils SaaS pour votre croissance`}
			description="Découvrez notre sélection des meilleurs outils SaaS pour accélérer votre marketing, vos ventes et votre acquisition. Comparatifs experts, avis francophones."
		/>
	</head>
	<body>
		<Header />
		<main>

			<!-- ═══ HERO ═══ -->
			<section class="hero">
				<div class="hero-grid" aria-hidden="true"></div>
				<div class="hero-glow" aria-hidden="true"></div>

				<!-- Floating logos -->
				<div class="hero-bubbles" aria-hidden="true">
					{sortedTools.slice(0, 8).map((tool, i) => (
						<a href={`/outils/${tool.id}`} class={`bubble bubble-${i + 1}`} title={tool.data.name} tabindex="-1">
							<img src={tool.data.logo} alt={tool.data.name} width="44" height="44" loading="lazy" />
						</a>
					))}
				</div>

				<!-- Content -->
				<div class="hero-content">
					<div class="hero-badge">
						<span class="badge-dot"></span>
						<span>{allTools.length} outils testés & référencés</span>
					</div>

					<h1 class="hero-title">
						Les meilleurs outils<br/>
						pour votre <em class="accent-word">growth</em>
					</h1>

					<p class="hero-subtitle">
						Découvrez, comparez et choisissez les meilleurs outils SaaS
						pour votre marketing, vos ventes et votre acquisition.
					</p>

					<div class="hero-cta">
						<a href="/outils" class="btn-hero-primary">
							<span>Découvrir les outils</span>
							<span class="btn-arrow">
								<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
									<path d="M5 12h14M12 5l7 7-7 7"/>
								</svg>
							</span>
						</a>
						<a href="/blog" class="btn-hero-ghost">
							Lire le blog
						</a>
					</div>

					<!-- Stats bar -->
					<div class="stats-bar">
						<div class="stat">
							<span class="stat-n">{allTools.length}+</span>
							<span class="stat-l">Outils testés</span>
						</div>
						<div class="stat-sep"></div>
						<div class="stat">
							<span class="stat-n">10+</span>
							<span class="stat-l">Catégories</span>
						</div>
						<div class="stat-sep"></div>
						<div class="stat">
							<span class="stat-n">100%</span>
							<span class="stat-l">Gratuit</span>
						</div>
					</div>
				</div>
			</section>

			<!-- ═══ FEATURED TOOLS ═══ -->
			{featuredTools.length > 0 && (
				<section class="section featured-section">
					<div class="section-header">
						<div class="section-eyebrow">Sélection</div>
						<h2 class="section-title">Outils à la une</h2>
						<p class="section-sub">Notre sélection des meilleurs outils du moment, testés par nos experts</p>
					</div>

					<div class="tools-grid">
						{featuredTools.map((tool) => (
							<ToolCard
								name={tool.data.name}
								tagline={tool.data.tagline}
								logo={tool.data.logo}
								category={tool.data.category}
								pricing={tool.data.pricing}
								priceRange={tool.data.priceRange}
								startingPrice={tool.data.startingPrice}
								rating={tool.data.rating}
								href={`/outils/${tool.id}`}
								featured={tool.data.featured}
							/>
						))}
					</div>

					<div class="section-cta">
						<a href="/outils" class="link-arrow">
							Voir tous les outils
							<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					</div>
				</section>
			)}

			<!-- ═══ CATEGORIES ═══ -->
			<section class="section categories-section">
				<div class="section-header">
					<div class="section-eyebrow">Catalogue</div>
					<h2 class="section-title">Parcourir par catégorie</h2>
					<p class="section-sub">Trouvez l'outil parfait pour chaque besoin</p>
				</div>

				<div class="categories-scroll-wrapper">
					<div class="categories-scroll">
						{categories.map((cat) => (
							<a href={`/outils?category=${cat.slug}`} class="cat-chip">
								<span class="cat-icon">{cat.icon}</span>
								<span>{cat.label}</span>
							</a>
						))}
					</div>
				</div>

				<!-- Category grid for desktop -->
				<div class="cat-grid">
					{categories.map((cat) => (
						<a href={`/outils?category=${cat.slug}`} class="cat-card">
							<span class="cat-card-icon">{cat.icon}</span>
							<span class="cat-card-label">{cat.label}</span>
							<svg class="cat-card-arrow" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
								<path d="M5 12h14M12 5l7 7-7 7"/>
							</svg>
						</a>
					))}
				</div>
			</section>

			<!-- ═══ WHY US ═══ -->
			<section class="section why-section">
				<div class="why-grid">
					<div class="why-text">
						<div class="section-eyebrow">Notre approche</div>
						<h2 class="section-title" style="text-align:left; margin-bottom:1.25rem;">
							Des recommandations<br/>que vous pouvez<br/><em style="font-style:normal; color:var(--accent);">vraiment</em> faire confiance
						</h2>
						<p class="why-desc">
							Chaque outil est testé en conditions réelles par notre équipe avant d'être référencé.
							Pas de contenus sponsorisés cachés, pas de biais d'affiliation non déclaré.
						</p>
						<div class="why-points">
							<div class="why-point">
								<span class="why-check">✓</span>
								<span>Testé en conditions réelles, pas seulement en démo</span>
							</div>
							<div class="why-point">
								<span class="why-check">✓</span>
								<span>Comparatifs objectifs vs alternatives</span>
							</div>
							<div class="why-point">
								<span class="why-check">✓</span>
								<span>Tarifs actualisés en 2025</span>
							</div>
							<div class="why-point">
								<span class="why-check">✓</span>
								<span>Perspectives francophones et européennes</span>
							</div>
						</div>
					</div>
					<div class="why-numbers">
						<div class="why-stat-card">
							<span class="why-stat-n">{allTools.length}+</span>
							<span class="why-stat-l">Outils analysés</span>
						</div>
						<div class="why-stat-card">
							<span class="why-stat-n">4.5★</span>
							<span class="why-stat-l">Note moyenne</span>
						</div>
						<div class="why-stat-card why-stat-wide">
							<span class="why-stat-n">100%</span>
							<span class="why-stat-l">Indépendant & gratuit</span>
						</div>
					</div>
				</div>
			</section>

			<!-- ═══ CTA FINALE ═══ -->
			<section class="cta-final">
				<div class="cta-glow" aria-hidden="true"></div>
				<div class="cta-content">
					<div class="section-eyebrow cta-eyebrow">Commencer maintenant</div>
					<h2 class="cta-title">
						Prêt à trouver<br/>l'outil qui change tout ?
					</h2>
					<p class="cta-desc">
						Rejoignez des milliers d'équipes qui font confiance à nos recommandations.
					</p>
					<a href="/outils" class="btn-cta">
						Explorer tous les outils
						<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
							<path d="M5 12h14M12 5l7 7-7 7"/>
						</svg>
					</a>
				</div>
			</section>

		</main>
		<Footer />
	</body>
</html>

<style>
	/* ═════════════════════════════════════════
	   HERO
	═════════════════════════════════════════ */

	.hero {
		position: relative;
		margin: 0 -1.5rem;
		overflow: hidden;
	}

	/* Grid background */
	.hero-grid {
		position: absolute;
		inset: 0;
		background-image:
			linear-gradient(var(--grid-color) 1px, transparent 1px),
			linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
		background-size: 48px 48px;
		-webkit-mask-image: linear-gradient(to bottom, rgba(0,0,0,0.9) 0%, transparent 88%);
		mask-image: linear-gradient(to bottom, rgba(0,0,0,0.9) 0%, transparent 88%);
		z-index: 0;
	}

	/* Warm glow from center */
	.hero-glow {
		position: absolute;
		top: -20%;
		left: 50%;
		transform: translateX(-50%);
		width: 900px;
		height: 600px;
		background: radial-gradient(ellipse at center, var(--accent-glow) 0%, transparent 65%);
		pointer-events: none;
		z-index: 0;
	}

	/* ─── Bubbles ─── */
	.hero-bubbles {
		position: absolute;
		inset: 0;
		z-index: 1;
		pointer-events: none;
	}

	.bubble {
		position: absolute;
		border-radius: 50%;
		background: var(--bg-primary);
		border: 1px solid var(--border-color);
		box-shadow: var(--shadow-md);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 10px;
		overflow: hidden;
		pointer-events: all;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.bubble:hover {
		box-shadow: var(--shadow-lg);
		transform: scale(1.08) !important;
	}

	.bubble img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		border-radius: 0;
	}

	/* Positions & animations */
	.bubble-1 { width: 72px; height: 72px; top: 16%; left: 5%; animation: float-a 7s ease-in-out infinite; }
	.bubble-2 { width: 54px; height: 54px; top: 50%; left: 1.5%; animation: float-b 9s ease-in-out infinite; }
	.bubble-3 { width: 62px; height: 62px; top: 76%; left: 11%; animation: float-a 8s ease-in-out infinite 1.2s; }
	.bubble-4 { width: 72px; height: 72px; top: 16%; right: 5%; animation: float-b 7s ease-in-out infinite 0.6s; }
	.bubble-5 { width: 54px; height: 54px; top: 50%; right: 1.5%; animation: float-a 9s ease-in-out infinite 1.8s; }
	.bubble-6 { width: 62px; height: 62px; top: 76%; right: 11%; animation: float-b 8s ease-in-out infinite 2.4s; }
	.bubble-7 { width: 46px; height: 46px; top: 33%; left: 17%; animation: float-a 11s ease-in-out infinite 3.5s; }
	.bubble-8 { width: 46px; height: 46px; top: 33%; right: 17%; animation: float-b 11s ease-in-out infinite 2.8s; }

	@keyframes float-a {
		0%, 100% { transform: translateY(0px) rotate(0deg); }
		50% { transform: translateY(-16px) rotate(2.5deg); }
	}
	@keyframes float-b {
		0%, 100% { transform: translateY(0px) rotate(0deg); }
		50% { transform: translateY(-10px) rotate(-2deg); }
	}

	/* ─── Hero content ─── */
	.hero-content {
		position: relative;
		z-index: 2;
		text-align: center;
		max-width: 780px;
		margin: 0 auto;
		padding: 5.5rem 1.5rem 5rem;
	}

	/* Badge */
	.hero-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background: var(--bg-primary);
		border: 1px solid var(--border-color);
		border-radius: 100px;
		padding: 0.45rem 1.125rem;
		font-size: 0.8125rem;
		font-weight: 500;
		color: var(--text-secondary);
		margin-bottom: 2.25rem;
		box-shadow: var(--shadow-sm);
	}

	.badge-dot {
		width: 7px;
		height: 7px;
		border-radius: 50%;
		background: var(--accent);
		flex-shrink: 0;
		animation: pulse-dot 2.5s ease-in-out infinite;
	}

	@keyframes pulse-dot {
		0%, 100% { opacity: 1; transform: scale(1); box-shadow: 0 0 0 0 rgba(249,115,22,0.4); }
		50% { opacity: 0.8; transform: scale(0.9); box-shadow: 0 0 0 4px rgba(249,115,22,0); }
	}

	/* Title */
	.hero-title {
		font-family: var(--font-display, "Bricolage Grotesque", system-ui);
		font-size: clamp(2.5rem, 6vw, 4.5rem);
		font-weight: 800;
		line-height: 1.08;
		letter-spacing: -0.04em;
		margin-bottom: 1.5rem;
		color: var(--text-primary);
	}

	.accent-word {
		font-style: normal;
		background: linear-gradient(135deg, var(--accent) 20%, #ea580c 80%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	/* Underline decoration on accent word */
	.accent-word::after {
		content: '';
		position: absolute;
		bottom: 0.06em;
		left: 0;
		right: 0;
		height: 0.06em;
		background: linear-gradient(135deg, var(--accent), #ea580c);
		border-radius: 2px;
		opacity: 0.35;
	}

	/* Subtitle */
	.hero-subtitle {
		font-size: 1.125rem;
		color: var(--text-secondary);
		line-height: 1.7;
		margin-bottom: 2.5rem;
		max-width: 560px;
		margin-left: auto;
		margin-right: auto;
		font-weight: 400;
	}

	/* CTA buttons */
	.hero-cta {
		display: flex;
		gap: 0.875rem;
		justify-content: center;
		flex-wrap: wrap;
		margin-bottom: 3.5rem;
	}

	.btn-hero-primary {
		display: inline-flex;
		align-items: center;
		gap: 0.625rem;
		padding: 0.875rem 1.75rem;
		background: var(--accent);
		color: white;
		border-radius: 12px;
		font-weight: 700;
		font-size: 0.9375rem;
		text-decoration: none;
		letter-spacing: -0.01em;
		box-shadow: 0 2px 0 rgba(234, 88, 12, 0.5), 0 8px 24px rgba(249, 115, 22, 0.25);
		transition: all 0.2s ease;
		position: relative;
		overflow: hidden;
	}

	.btn-hero-primary::before {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(to bottom, rgba(255,255,255,0.12), transparent);
		pointer-events: none;
	}

	.btn-hero-primary:hover {
		background: var(--accent-hover);
		transform: translateY(-2px);
		box-shadow: 0 4px 0 rgba(194, 65, 12, 0.5), 0 16px 40px rgba(249, 115, 22, 0.35);
		color: white;
	}

	.btn-hero-primary:active {
		transform: translateY(0);
	}

	.btn-arrow {
		display: flex;
		align-items: center;
		transition: transform 0.2s ease;
	}

	.btn-hero-primary:hover .btn-arrow {
		transform: translateX(3px);
	}

	.btn-hero-ghost {
		display: inline-flex;
		align-items: center;
		padding: 0.875rem 1.625rem;
		background: var(--bg-primary);
		color: var(--text-primary);
		border: 1.5px solid var(--border-color);
		border-radius: 12px;
		font-weight: 500;
		font-size: 0.9375rem;
		text-decoration: none;
		transition: all 0.2s ease;
		box-shadow: var(--shadow-sm);
	}

	.btn-hero-ghost:hover {
		border-color: var(--text-muted);
		background: var(--bg-secondary);
		color: var(--text-primary);
	}

	/* Stats bar */
	.stats-bar {
		display: inline-flex;
		align-items: center;
		gap: 0;
		padding: 0.875rem 1.75rem;
		background: var(--bg-primary);
		border: 1px solid var(--border-color);
		border-radius: 14px;
		box-shadow: var(--shadow-sm);
	}

	.stat {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.15rem;
		padding: 0 1.375rem;
	}

	.stat-sep {
		width: 1px;
		height: 32px;
		background: var(--border-color);
		flex-shrink: 0;
	}

	.stat-n {
		font-family: var(--font-display, "Bricolage Grotesque", system-ui);
		font-size: 1.375rem;
		font-weight: 800;
		color: var(--text-primary);
		line-height: 1;
		letter-spacing: -0.03em;
	}

	.stat-l {
		font-size: 0.7rem;
		color: var(--text-muted);
		font-weight: 500;
		letter-spacing: 0.03em;
		text-transform: uppercase;
	}

	/* ═════════════════════════════════════════
	   SECTIONS COMMON
	═════════════════════════════════════════ */

	.section {
		margin-top: 6rem;
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-eyebrow {
		display: inline-block;
		font-family: var(--font-display, "Bricolage Grotesque", system-ui);
		font-size: 0.6875rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--accent);
		margin-bottom: 0.75rem;
	}

	.section-title {
		font-size: clamp(1.75rem, 3.5vw, 2.5rem);
		font-weight: 800;
		letter-spacing: -0.035em;
		margin-bottom: 0.75rem;
	}

	.section-sub {
		font-size: 1.0625rem;
		color: var(--text-secondary);
		max-width: 500px;
		margin: 0 auto;
		line-height: 1.6;
	}

	/* ═════════════════════════════════════════
	   FEATURED TOOLS
	═════════════════════════════════════════ */

	.tools-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 1.5rem;
		margin-bottom: 2rem;
	}

	.section-cta {
		text-align: center;
		margin-top: 2.5rem;
	}

	.link-arrow {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--accent);
		font-weight: 600;
		font-size: 0.9375rem;
		text-decoration: none;
		transition: gap 0.2s ease, color 0.2s ease;
	}

	.link-arrow:hover {
		gap: 0.75rem;
		color: var(--accent-hover);
	}

	/* ═════════════════════════════════════════
	   CATEGORIES
	═════════════════════════════════════════ */

	/* Mobile: scrollable chips */
	.categories-scroll-wrapper {
		display: none;
		overflow: hidden;
	}

	.categories-scroll {
		display: flex;
		gap: 0.625rem;
		overflow-x: auto;
		padding-bottom: 0.5rem;
		scrollbar-width: none;
		-ms-overflow-style: none;
	}

	.categories-scroll::-webkit-scrollbar {
		display: none;
	}

	.cat-chip {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		white-space: nowrap;
		padding: 0.625rem 1.125rem;
		border-radius: 100px;
		border: 1.5px solid var(--border-color);
		background: var(--bg-primary);
		color: var(--text-secondary);
		font-weight: 500;
		font-size: 0.9rem;
		text-decoration: none;
		transition: border-color 0.15s ease, color 0.15s ease, background 0.15s ease;
	}

	.cat-chip:hover {
		border-color: var(--accent);
		color: var(--accent);
		background: var(--accent-light);
	}

	.cat-icon {
		font-size: 0.875rem;
		opacity: 0.7;
	}

	/* Desktop: grid */
	.cat-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 1rem;
	}

	.cat-card {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1.125rem 1.25rem;
		border-radius: 12px;
		border: 1.5px solid var(--border-color);
		background: var(--bg-primary);
		color: var(--text-secondary);
		font-weight: 500;
		font-size: 0.9375rem;
		text-decoration: none;
		transition: all 0.2s ease;
		box-shadow: var(--shadow-sm);
		position: relative;
		overflow: hidden;
	}

	.cat-card::before {
		content: '';
		position: absolute;
		inset: 0;
		background: var(--accent-light);
		opacity: 0;
		transition: opacity 0.2s ease;
	}

	.cat-card:hover::before {
		opacity: 1;
	}

	.cat-card:hover {
		border-color: var(--accent);
		color: var(--accent);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.cat-card-icon {
		font-size: 1rem;
		flex-shrink: 0;
		position: relative;
		z-index: 1;
		opacity: 0.6;
	}

